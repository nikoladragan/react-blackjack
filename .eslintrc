{
	"ecmaFeatures": {
		"jsx": true,
		"modules": true
	},
	"rules": {
		"quotes": [2, "single"],
		"no-var": 2,
		"prefer-const": 1,
		"eqeqeq": 2,
		"no-console": 0,
		"indent": [2, "tab"],
		"no-extra-parens": 2,
		"default-case": 2,
		"no-multi-spaces": 2,
		"comma-spacing": [2, {
			"before": false,
			"after": true
		}],
		"computed-property-spacing": [2, "never"],
		"semi": 2
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true
	}
}
